{
  "manifest_version": 2,
  "name": "Anylyse with wintrchess",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "*://wintrchess.com/*",
    "*://lichess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://lichess.org/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://wintrchess.com/*"],
      "js": ["paste.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anylyse with wintrchess",
    "default_icon": {
      "16": "assets/icon16.jpg",
      "32": "assets/icon32.jpg",
      "128": "assets/icon128.jpg"
    }
  }
}
